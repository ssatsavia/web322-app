<!-- views/items.hbs -->
<a href="/items/add" class="btn btn-success pull-right">Add Item</a>
<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Published</th>
                        <th></th> <!-- Empty header for the remove button column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.postDate}}</td>
                            <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
                            <td>{{this.price}}</td>
                            <td>{{this.published}}</td>
                            <td>
                                <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless items}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>